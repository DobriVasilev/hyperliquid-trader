{
  "manifest_version": 3,
  "name": "TradingView Bridge",
  "version": "2.0.0",
  "description": "Connects TradingView/Hyperliquid/Drift chart position tool to trading web app",
  "permissions": ["storage"],
  "host_permissions": [
    "*://www.tradingview.com/*",
    "*://tradingview.com/*",
    "*://app.hyperliquid.xyz/*",
    "*://drift.trade/*",
    "*://app.drift.trade/*",
    "https://dobri.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.tradingview.com/*", "*://tradingview.com/*", "*://app.hyperliquid.xyz/*", "*://drift.trade/*", "*://app.drift.trade/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
